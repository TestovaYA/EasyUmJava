<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mybatis.CatMapper">

    <insert id="save" parameterType="org.example.mybatis.Cat">
        INSERT INTO Cat (name, birth_date, breed, color, owner_id)
        VALUES (#{name}, #{birthDate}, #{breed}, #{color}, #{ownerId})
    </insert>

    <delete id="deleteById" parameterType="int">
        DELETE FROM Cat WHERE id = #{id}
    </delete>

    <delete id="deleteByEntity" parameterType="org.example.mybatis.Cat">
        DELETE FROM Cat WHERE id = #{id}
    </delete>

    <delete id="deleteAll">
        DELETE FROM Cat
    </delete>

    <update id="update" parameterType="org.example.mybatis.Cat">
        UPDATE Cat
        SET name = #{name}, birth_date = #{birthDate}, breed = #{breed}, color = #{color}, owner_id = #{ownerId}
        WHERE id = #{id}
    </update>

    <select id="getById" parameterType="long" resultType="org.example.mybatis.Cat">
        SELECT * FROM Cat WHERE id = #{id}
    </select>

    <select id="getAll" resultType="org.example.mybatis.Cat">
        SELECT * FROM Cat
    </select>

    <select id="getAllByOwnerId" parameterType="int" resultType="org.example.mybatis.Cat">
        SELECT * FROM Cat WHERE owner_id = #{ownerId} LIMIT 5
    </select>

</mapper>