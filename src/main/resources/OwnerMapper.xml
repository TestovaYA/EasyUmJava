<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mybatis.OwnerMapper">

    <insert id="save" parameterType="org.example.mybatis.Owner">
        INSERT INTO Owner (name, birth_date)
        VALUES (#{name}, #{birthDate})
    </insert>

    <delete id="deleteById" parameterType="int">
        DELETE FROM Owner WHERE id = #{id}
    </delete>

    <delete id="deleteByEntity" parameterType="org.example.mybatis.Owner">
        DELETE FROM Owner WHERE id = #{id}
    </delete>

    <delete id="deleteAll">
        DELETE FROM Owner
    </delete>

    <update id="update" parameterType="org.example.mybatis.Owner">
        UPDATE Owner
        SET name = #{name}, birth_date = #{birthDate}
        WHERE id = #{id}
    </update>

    <select id="getById" parameterType="int" resultType="org.example.mybatis.Owner">
        SELECT * FROM Owner WHERE id = #{id}
    </select>

    <select id="getAll" resultType="org.example.mybatis.Owner">
        SELECT * FROM Owner
    </select>

</mapper>